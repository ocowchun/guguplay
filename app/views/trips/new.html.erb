<div class="container">
	<div class="form-half">
	<%= form_for @trip,:html=>{:class=>'form-horizontal',:role=>'form'} do |f| %>
	<div class="form-group">
		<%=f.label :name, "trip_name",:class=>'control-label'%>
		<%= f.text_field :name,:class=>'form-control'%>
	</div>

	<div class="pull-right">
		<%= link_to "取消", root_path,:class=>'btn btn-default' %>
		<%= f.submit "確定",:class=>"btn btn-success"%>
	</div>
	<% end %>
	<div class="warning-area">
		<%= render :partial => "common/form_error", :locals => { :table=>@trip } %>
	</div>
	
</div>

</div>